@page
@model IcreamShopCilent.Pages.Auth.RegisterModel
<form method="post">
    <div class="form-group">
        <label for="username">Full Name</label>
        <input type="text" id="username" asp-for="RegisterDto.FullName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" asp-for="RegisterDto.Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="tel">Phone</label>
        <input type="tel" id="tel" asp-for="RegisterDto.PhoneNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" id="text" asp-for="RegisterDto.Address" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" asp-for="RegisterDto.Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

